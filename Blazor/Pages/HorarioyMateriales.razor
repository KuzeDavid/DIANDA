@page "/HorarioyMateriales"

<PageTitle>Te recomendamos</PageTitle>

<div class="d-flex flex-column justify-content-center align-items-center" style="height: 70vh;">

    <div class="text-center mb-4">
        <h1>Te recomendamos</h1>
    </div>
    
    <div class="d-grid gap-2 col-6 mx-auto mt-1" >
        <button class="btn btn-primary" type="wbutton" @onclick="ShowModalHorario">Registrar Horario</button>
    </div>

    <div class="d-grid gap-2 col-6 mx-auto mt-4">
        <button class="btn btn-primary" type="wbutton" @onclick="ShowModalMateriales">Registrar Materiales</button>
    </div>

</div>


                <!-- HORARIOS -->
<!-- Modal de horario-->
<div class="modal" tabindex="-1" @onclick="HideModalHorario" style="display: @modalDisplayHorario">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal horarios</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="HideModalHorario"></button>
                </div>
                <div class="modal-body">
                    <p>Info de modal de horarios</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModalHorario">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Capa de fondo oscuro -->
<div class="modal-backdrop" style="display: @modalDisplayHorario"></div>


<!-- Modal de Materiales-->
<div class="modal" tabindex="-1" @onclick="HideModalMateriales" style="display: @modalDisplayMateriales">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal materiales</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="HideModalMateriales"></button>
                </div>
                <div class="modal-body">
                    <p>Info de modal de materiales.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModalMateriales">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Capa de fondo oscuro -->
<div class="modal-backdrop" style="display: @modalDisplayMateriales"></div>

@code {
    private string modalDisplayHorario = "none";
    private string modalDisplayMateriales = "none";


    private void ShowModalHorario()
    {
        modalDisplayHorario = "block";
    }
    private void HideModalHorario()
    {
        modalDisplayHorario = "none";
    }

    private void ShowModalMateriales()
    {
        modalDisplayMateriales = "block";
    }
    private void HideModalMateriales()
    {
        modalDisplayMateriales = "none";
    }

}